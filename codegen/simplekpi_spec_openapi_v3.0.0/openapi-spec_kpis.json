{
    "openapi":"3.0.0",
    "info":{
      "description":"",
      "version":"1.0",
      "title":"SimpleKPI API",
      "termsOfService":"https://www.simplekpi.com/Company/Terms"
    },
    "tags":[
      {
        "name":"KPIs"
      }
    ],
    "paths":{
      "/kpis":{
        "get":{
          "tags":[
            "KPIs"
          ],
          "summary":"Get all KPIs",
          "operationId":"getAllKPIs",
          "description":"Returns data on all KPIs. There are no parameters for this API.",
          "responses":{
            "200":{
              "description":"Success",
              "content":{
                "application/json":{
                  "schema":{
                    "type":"array",
                    "items":{
                      "$ref":"#/components/schemas/KPI"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "servers":[
      {
        "url":"https://YOURDOMAIN.simplekpi.com/api"
      }
    ],
    "security":[
      {
        "basicAuth":[]
      }
    ],
    "components":{
      "securitySchemes":{
        "basicAuth":{
          "type":"http",
          "scheme":"basic"
        }
      },
      "schemas":{
        "KPI":{
          "properties":{
            "id":{"type":"integer","format":"int64"},
            "category_id":{"type":"integer","format":"int64"},
            "icon_id":{"type":"integer","format":"int64"},
            "unit_id":{"type":"integer","format":"int64"},
            "frequency_id":{"type":"string"},
            "name":{"type":"string"},
            "description":{"type":"string"},
            "target_default":{"type":"number"},
            "value_direction":{"type":"string"},
            "aggregate_function":{"type":"string"},
            "sort_order":{"type":"integer"},
            "is_active":{"type":"boolean"},
            "is_calculated":{"type":"boolean"},
            "created_at":{"type":"string"},
            "updated_at":{"type":"string"}
          }
        }
      }
    }
  }